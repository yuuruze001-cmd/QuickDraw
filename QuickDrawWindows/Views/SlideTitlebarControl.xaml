<?xml version="1.0" encoding="utf-8" ?>
<base:TitlebarBaseControl
    x:Class="QuickDraw.Views.SlideTitlebarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:QuickDraw.Views.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:QuickDraw.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        x:Name="LayoutRoot"
        Width="Auto"
        Height="48">
        <Grid.Resources>
            <ResourceDictionary>
                <x:Double x:Key="ProgressBarTrackHeight">0</x:Double>
                <CornerRadius x:Key="ProgressBarCornerRadius">0</CornerRadius>
            </ResourceDictionary>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ProgressBar
            x:Name="ProgressBar"
            Grid.Column="0"
            VerticalAlignment="Bottom"
            Value="{x:Bind Progress}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    x:Name="CenterLeftColumn"
                    Width="*"
                    MinWidth="62" />
                <ColumnDefinition x:Name="CommandsColumn" Width="Auto" />
                <ColumnDefinition
                    x:Name="CenterRightColumn"
                    Width="*"
                    MinWidth="152" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <StackPanel.Resources>
                    <StaticResource x:Key="ButtonBackground" ResourceKey="ControlFillColorTransparentBrush" />
                    <StaticResource x:Key="ButtonBorderBrush" ResourceKey="ControlFillColorTransparentBrush" />
                </StackPanel.Resources>
                <Button
                    x:Name="GrayscaleButton"
                    Margin="0"
                    Padding="12,12,12,12"
                    BorderThickness="0"
                    Command="{x:Bind GrayscaleButtonCommand}">
                    <Viewbox Width="16" Height="16">
                        <FontIcon Glyph="&#xE790;" />
                    </Viewbox>
                </Button>
                <Button
                    x:Name="PreviousButton"
                    Margin="10,0,0,0"
                    Padding="12,12,12,12"
                    BorderThickness="0"
                    Command="{x:Bind PreviousButtonCommand}">
                    <Viewbox Width="16" Height="16">
                        <SymbolIcon Symbol="Previous" />
                    </Viewbox>
                </Button>
                <Button
                    x:Name="NextButton"
                    Margin="10,0,0,0"
                    Padding="12,12,12,12"
                    BorderThickness="0"
                    Command="{x:Bind NextButtonCommand}">
                    <Viewbox Width="16" Height="16">
                        <SymbolIcon Symbol="Next" />
                    </Viewbox>
                </Button>
                <Button
                    x:Name="PauseButton"
                    Margin="10,0,0,0"
                    Padding="12,12,12,12"
                    BorderThickness="0"
                    Command="{x:Bind PauseButtonCommand}">
                    <Viewbox Width="16" Height="16">
                        <SymbolIcon x:Name="PauseButtonSymbol" Symbol="Pause" />
                    </Viewbox>
                </Button>
            </StackPanel>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftInsetColumn" Width="{x:Bind LeftInset}" />
                <ColumnDefinition x:Name="BackColumn" Width="Auto" />
                <ColumnDefinition x:Name="RightInsetColumn" Width="{x:Bind RightInset}" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="BackButton"
                Grid.Column="1"
                Margin="0,0,0,0"
                Padding="14,14,14,14"
                Command="{x:Bind BackButtonCommand}"
                CornerRadius="0">
                <FontIcon Glyph="&#xE830;" />
            </Button>

        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>

                <VisualStateGroup.Transitions>
                    <VisualTransition To="Inactive">
                        <VisualTransition.GeneratedEasingFunction>
                            <CubicEase EasingMode="EaseIn" />
                        </VisualTransition.GeneratedEasingFunction>
                    </VisualTransition>
                    <VisualTransition From="Inactive">
                        <VisualTransition.GeneratedEasingFunction>
                            <CubicEase EasingMode="EaseIn" />
                        </VisualTransition.GeneratedEasingFunction>
                    </VisualTransition>
                </VisualStateGroup.Transitions>

                <VisualState x:Name="PausedState">
                    <VisualState.StateTriggers>
                        <StateTrigger IsActive="{x:Bind Paused}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="PauseButtonSymbol.Symbol" Value="Play" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</base:TitlebarBaseControl>
