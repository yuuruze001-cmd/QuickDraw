<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="QuickDraw.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:QuickDraw.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:slider="using:Syncfusion.UI.Xaml.Sliders"
    x:Name="MainPageElement"
    mc:Ignorable="d">

    <Page.Background>
        <SolidColorBrush Color="#00000000" />
    </Page.Background>

    <Page.Resources>
        <DataTemplate x:Key="TrackLabelTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Value, Converter={StaticResource doubleToEnumConverter}}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Name="ToolTipTemplate">
            <TextBlock Text="{Binding ToolTipText, Converter={StaticResource stringToEnumConverter}}" />
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <local:MainTitlebarControl
            x:Name="AppTitleBar"
            Grid.Row="0"
            DragRegionsChanged="{x:Bind ViewModel.HandleDragRegionsChanged}"
            Inactive="{x:Bind ViewModel.TitlebarInactive, Mode=OneWay}" />

        <Grid
            x:Name="MainGrid"
            Grid.Row="1"
            Padding="24,8,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <local:ImageFolderListViewControl x:Name="ImageFolderListView" Grid.Row="0" />
            <local:ImageFolderListViewControl2
                x:Name="ImageFolderListView2"
                Grid.Row="1"
                ItemsSource="{x:Bind ViewModel.ImageFolderCollection}" />

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <slider:SfSlider
                    x:Name="TimerSlider"
                    DividerHeight="10"
                    DividerStrokeThickness="2"
                    DividerWidth="10"
                    Interval="1"
                    LabelOffset="14"
                    LabelTemplate="{StaticResource TrackLabelTemplate}"
                    Maximum="4"
                    Minimum="0"
                    ShowDividers="True"
                    ShowLabels="True"
                    StepFrequency="1"
                    ToolTipFormat="N0"
                    ToolTipTemplate="{StaticResource ToolTipTemplate}"
                    Value="{x:Bind ViewModel.TimerSiderValue}" />


                <!--<RadioButtons Header="Time Per Image" MaxColumns="5" VerticalContentAlignment="Center" Grid.Column="0" VerticalAlignment="Center">
                    <RadioButton Content="30s" MinWidth="0" MinHeight="0"/>
                    <RadioButton Content="1m" MinWidth="0" MinHeight="0"/>
                    <RadioButton Content="2m" MinWidth="0" MinHeight="0"/>
                    <RadioButton Content="5m" MinWidth="0" MinHeight="0"/>
                    <RadioButton Content="No Limit" MinWidth="0" MinHeight="0"/>
                </RadioButtons>-->
                <Button
                    x:Name="StartButton"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    VerticalAlignment="Top"
                    Command="{x:Bind ViewModel.StartSlideShowCommand}">

                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Margin="0,0,11,0" Symbol="Play" />
                        <TextBlock Text="Start" />
                    </StackPanel>

                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
